@using SchedSystem.Models
@model LoginViewModel
<div class="jumbotron" style="background-color: white;margin-top: 55px;">
    <h5 class="text-center" style="color:#8080808a">WELCOME TO</h5>
    <h3 class="text-center" style="color: #858585">ONLINE APOSTILLE APPLICATION & APPOINTMENT SYSTEM</h3>
</div>
<div class="row" style="margin-top: -45px;">
    <div class="col-md-3 col-sm-3">

    </div>
    <div class="col-md-6 col-sm-6">
        <section id="loginForm" class="form-control-font" style="border: 1px solid #b7b7b7;height:315px;">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div style="background-color: #217ff3;color: white;height: 35px;">
                    <p class="text-left " style="padding: 8px;font-weight:600;font-size:16px;">Login</p>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div style="padding: 5px;">
                    <div class="form-group ">
                        <div class="col-md-6 col-sm-6" style="position: relative;left: 25%;top: 50px;">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "form-control", Style = "font-size: 16px;text-align:center;" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6" style="position: relative;left: 25%;top: 50px;">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", Style = "font-size: 16px;text-align:center;" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6" style="position: relative;left: 25%;top: 50px;">
                            <input type="button" value="SUBMIT" class="btn btn-default col-md-12 col-sm-12" style="background-color:#217ff3; color: white;font-size: 16px;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6" style="position: relative;left: 25%;top: 38px;text-align:center;">
                            <p style="color:#217ff3">
                                @Html.ActionLink("Forgot account?", "ForgotPassword")
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6" style="position: relative;left: 25%;top: 38px;text-align:center;">
                            <p>
                                <span style="color:#656565">New user? Click</span>
                                <span style="color:#217ff3;font-weight: bold;">@Html.ActionLink("here", "Register","Account")</span>
                                <span style="color:#656565">to register</span>
                            </p>
                        </div>
                    </div>
                </div>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
        @*<div style="background-color:#217ff3">
                <p>Login</p>
            </div>*@
    </div>
    <div class="col-md-3 col-sm-3">

    </div>
</div>